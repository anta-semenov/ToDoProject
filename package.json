{
  "name": "to-do-project",
  "version": "1.0.0",
  "description": "Getting starting with creating web apps",
  "scripts": {
    "start": "webpack-dev-server",
    "lint": "eslint src",
    "test": "jest",
    "test-mocha": "mocha --compilers js:babel-core/register --require ./tests/test_helper.js --require ignore-styles './tests/**/*_spec.@(js|jsx)'",
    "test:watch": "jest --watch",
    "deploy": "webpack --config webpack.prod.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anta-semenov/ToDoProject.git"
  },
  "author": "Anton Semenov",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.3.4",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.26.0",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-rewire": "^1.0.0-rc-2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.3.13",
    "css-loader": "^0.28.10",
    "cssnano": "^3.7.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "2.2.0",
    "eslint-plugin-react": "^4.2.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "webpack-contrib/html-webpack-plugin",
    "ignore-styles": "^1.2.0",
    "jest": "^22.4.2",
    "less": "^2.6.1",
    "less-loader": "^4.0.6",
    "postcss": "^5.0.19",
    "postcss-load-config": "^1.2.0",
    "postcss-loader": "^2.1.1",
    "react-addons-test-utils": "^15.2.1",
    "react-hot-loader": "^4.0.0",
    "style-loader": "^0.20.2",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0"
  },
  "dependencies": {
    "classnames": "2.2.5",
    "date-fns": "1.29.0",
    "draft-js": "0.10.5",
    "firebase": "4.10.1",
    "immutable": "3.8.2",
    "immutablediff": "0.4.4",
    "lodash": "4.17.5",
    "moment": "2.21.0",
    "react": "16.2.0",
    "react-dnd": "2.5.4",
    "react-dnd-html5-backend": "2.5.4",
    "react-dom": "16.2.0",
    "react-immutable-proptypes": "2.1.0",
    "react-motion": "0.5.2",
    "react-redux": "5.0.7",
    "react-router": "3.2.0",
    "redux": "3.7.2",
    "redux-logger": "3.0.6",
    "redux-thunk": "2.2.0",
    "reselect": "3.0.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^[./a-zA-Z0-9$_-]+\\.(jpg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/tests/cfg/fileMock.js",
      "^[./a-zA-Z0-9$_-]+\\.(less)$": "<rootDir>/tests/cfg/stylesMock.js"
    },
    "setupFiles": [
      "<rootDir>/tests/cfg/enzyme.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "**/?(*)(_spec).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(lib|node_modules|public)/",
      "<rootDir>/tests/cfg/"
    ]
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}
